#  along with this program; if not, write to the Free Software
#  Foundation, Inc., 59 Temple Place - Suite 330, Boston, MA 02111-1307,
#  USA.

if [ -z "$1" ] || [ -z "$2" ]
then
  echo "Usage : $0 <username | uid> <groupname | gid>"
  exit 1
fi

# Source runtime file
_RUNTIMEFILE="/etc/ldapscripts/runtime"
. "$_RUNTIMEFILE"

# Check username : $1
_uidtouser "$1"

# Check groupname : $2 must exist in LDAP !
_GID=`_ldapsearch "$GSUFFIX,$SUFFIX" "(&(objectClass=posixGroup)(!(memberUid=$_UID))(|(cn=$2)(gidNumber=$2)))" cn | grep "cn: " | head -n 1 | sed -e "s|cn: ||"`
[ -z "$_GID" ] && end_die "Group $2 not found (or $_UID already member of $2)"

# Modify group entry
_extractldif 2 | _filterldif | _ldapmodify

[ $? -eq 0 ] || end_die "Error adding user $_UID to group $_GID"
end_ok "Successfully added user $_UID to group $_GID"

# Ldif template ##################################
##dn: cn=<gid>,<gsuffix>,<suffix>
##changetype: modify
##add: memberUid
##memberUid: <uid>

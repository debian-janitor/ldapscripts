#  along with this program; if not, write to the Free Software
#  Foundation, Inc., 59 Temple Place - Suite 330, Boston, MA 02111-1307,
#  USA.

if [ -z "$1" ]
then
  echo "Usage : $0 <username | uid> [encoded password]"
  exit 1
fi

# Source runtime file
_RUNTIMEFILE="/etc/ldapscripts/runtime"
. "$_RUNTIMEFILE"

# Find username : $1 must exist in LDAP !
_findentry "$USUFFIX,$SUFFIX" "(&(objectClass=posixAccount)(|(uid=$1)(uidNumber=$1)))"
[ -z "$_ENTRY" ] && end_die "User $1 not found in LDAP"

if [ -z "$2" ] # Have to prompt for a *clear* password
then
  echo "Changing password for user $_ENTRY"
  echo -n "New Password: "
  stty -echo ; read _PASSWORD ; stty echo ; echo ''
  [ -z "$_PASSWORD" ] && end_die "Please enter a password"
  echo -n "New Password (verify): "
  stty -echo ; read _PASSWORD2 ; stty echo ; echo ''
  [ "$_PASSWORD" != "$_PASSWORD2" ] && end_die "Passwords differ, please try again"

  # Change the user's password
  _changepassword "$_PASSWORD" "$_ENTRY"
  [ $? -eq 0 ] && echo_log "Successfully set password for user $_ENTRY"
  end_ok
else # Have to use the *encoded* password given on the command line
  # Use LDIF info to modify the password
  _PASSWORD="$2"
  _extractldif 2 | _filterldif | _ldapmodify
  [ $? -eq 0 ] || end_die "Error setting encoded password for user $_ENTRY"
  end_ok "Successfully set encoded password for user $_ENTRY"
fi

# Ldif template ##################################
##dn: <entry>
##changetype: modify
##replace: userPassword
##userPassword: <password>

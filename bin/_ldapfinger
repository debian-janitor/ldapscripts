if [ -z "$1" ]
then
  echo "Usage : $0 <username | machinename | groupname | uid | gid>"
  exit 1
fi

# Source runtime file
_RUNTIMEFILE="/etc/ldapscripts/runtime"
. "$_RUNTIMEFILE"

# Find and display the entry
_ldapsearch "$SUFFIX" "(|(&(objectClass=posixAccount)(|(uid=$1)(uidNumber=$1)))(&(objectClass=posixGroup)(|(cn=$1)(gidNumber=$1))))" || end_die "No entry found"
end_ok
